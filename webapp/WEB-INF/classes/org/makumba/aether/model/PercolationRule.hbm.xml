<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.makumba.aether.model">
	<class name="PercolationRule">

		<cache usage="read-write" />

		<id name="id" column="percolationrule">
			<generator class="native" />
		</id>

		<property name="subject" />
		<property name="predicate" />
		<property name="object" />
		<property name="consumption" />
        <property name="propagationDepthLimit" />
		<property name="description" />
		<property name="active" />
		
		<bag name="relationQueries" table="PercolationRule__relationQueries" lazy="false" cascade="all" inverse="false">
			<key column="id_initialpercolationrule" />
			<many-to-many class="RelationQuery" />
		</bag>

	</class>
</hibernate-mapping>


