<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.makumba.aether.model">
	<class name="PercolationStep">

		<cache usage="read-write" />

		<id name="id" column="percolationstep">
			<generator class="native" />
		</id>

		<property name="previousURL" />
		<property name="objectURL" />
		<property name="userGroup" />
		<property name="focus" />
		<property name="nimbus" />
		<property name="percolationPath" />
		<property name="percolationLevel" />
		
		
		<many-to-one name="previous" class="PercolationStep" />
		<many-to-one name="root" class="PercolationStep" />
		<many-to-one name="matchedAetherEvent" class="MatchedAetherEvent" />
		<many-to-one name="percolationRule" class="PercolationRule" />

	</class>
</hibernate-mapping>


