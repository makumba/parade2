<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.makumba.parade.model"
	default-lazy="false" >
	
	<typedef name="objectType"
		class="org.makumba.parade.tools.EnumUserType">
		<param name="enumClass">org.makumba.parade.aether.ObjectTypes</param>
	</typedef>

	<typedef name="userType"
		class="org.makumba.parade.tools.EnumUserType">
		<param name="enumClass">org.makumba.aether.UserTypes</param>
	</typedef>
	
	<class name="ActionLog">

		<cache usage="read-write" />

		<id name="id" column="actionlog">
			<generator class="native" />
		</id>

		<property name="logDate" />
		<property name="user" />
		<property name="context" />
		<property name="url" />
		<property name="queryString" />
		<property name="post" />
		<property name="action" />
		<property name="origin" />
		<property name="paradecontext" />
		<property name="file" />
		<property name="objectType" type="objectType" />
		<property name="userType" type="userType" />

	</class>
</hibernate-mapping>
