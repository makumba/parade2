<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
      
<hibernate-mapping package="org.makumba.parade.model">
	<class name="Parade">
		<id name="id" unsaved-value="undefined">
			<generator class="native" />
		</id>
		
		<property name="paradeBase" />
		
		<map name="rows" outer-join="true" cascade="all-delete-orphan" inverse="true" access="field" order-by="rowname">
		    <cache usage="read-write" />
			<key><column name="id_parade" not-null="false"/></key>
			<index column="rowname" type="string"/>
			<one-to-many class="Row" />
		</map>
		
	</class>
</hibernate-mapping>

      
