<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
      
<hibernate-mapping package="org.makumba.parade.model">
	<class name="Parade">
	
		<cache usage="read-write" />
	
		<id name="id" unsaved-value="undefined">
			<generator class="native" />
		</id>
		
		<property name="baseDir" />
		
		<map name="applications" cascade="all-delete-orphan" inverse="true" access="field" order-by="name">
		    <cache usage="read-write" />
			<key><column name="id_parade" not-null="false"/></key>
			<index column="name" type="string"/>
			<one-to-many class="Application" />
		</map>
		
		<map name="users" cascade="all-delete-orphan" inverse="true" access="field" order-by="login">
		    <cache usage="read-write" />
			<key><column name="parade"/></key>
			<index column="login" type="string"/>
			<one-to-many class="User" />
		</map>
		
		<map name="rows" cascade="all-delete-orphan" inverse="true" access="field" order-by="rowname">
		    <cache usage="read-write" />
			<key><column name="id_parade"/></key>
			<index column="rowname" type="string"/>
			<one-to-many class="Row" />
		</map>
		
		<map name="JNotifyWatches" lazy="true" table="JNotifyWatches">
			<key column = "WATCH_ID"/>
			<index column = "rowname" type="string"/>
			<element column = "watch" type="int" not-null="true" />
		</map>
		
	</class>
</hibernate-mapping>

      
