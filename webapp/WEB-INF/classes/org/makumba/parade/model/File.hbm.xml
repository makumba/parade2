<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
      
<hibernate-mapping package="org.makumba.parade.model">
	<class name="File" lazy="true">
	
		<cache usage="read-write" />
	
		<id name="id"> <!-- unsaved-value="undefined" -->
			<generator class="native" />
		</id>
		
		<property name="name" />
		<property name="date" />
		<property name="size" />
		<property name="path" />
		<property name="parentPath" />
		<property name="isDir" />
		<property name="onDisk" />
		
		<many-to-one name="row" column="id_row" not-null="true" outer-join="true" lazy="false"/>
		
         <map name="filedata" cascade="all-delete-orphan" inverse="true" access="field" order-by="dataType" lazy="false" outer-join="true">
		    <cache usage="read-write" />
			<key><column name="id_file" not-null="false"/></key>
			<index column="dataType" type="string"/>
			<one-to-many class="AbstractFileData" />
		</map>
		
		<!-- 
		<list name="children" outer-join="true" table="file_children" cascade="all" inverse="true" access="field">
		    <cache usage="read-write" />
			<key><column name="id" not-null="false"/></key>
			<index column="name" type="string"/>
			<one-to-many class="File" />
		</list>
		 -->
		
	</class>
		
</hibernate-mapping>
		