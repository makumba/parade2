<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
      
<hibernate-mapping package="org.makumba.parade.model">
	<class name="Row">
	
		<cache usage="nonstrict-read-write" />
	
		<id name="id"> <!-- unsaved-value="undefined" -->
			<generator class="native" />
		</id>

		<property name="rowname"/>
        <property name="rowpath"/>
        <property name="description"/>
        
        
        <many-to-one name="parade" column="id_parade" not-null="true"/>
        
        <!-- <one-to-one name="root" class="File" property-ref="row" />  -->
        
        <map name="files" outer-join="true" cascade="all-delete-orphan" inverse="true" access="field" order-by="name" lazy="true">
		    <cache usage="nonstrict-read-write" />
			<key><column name="id_row" not-null="false"/></key>
			<index column="path" type="string"/>
			<one-to-many class="File"/>
		</map>
		
		<map name="rowdata" outer-join="true" cascade="all-delete-orphan" inverse="true" access="field" order-by="dataType" lazy="true">
		    <cache usage="nonstrict-read-write" />
			<key><column name="id_row" not-null="false"/></key>
			<index column="dataType" type="string"/>
			<one-to-many class="AbstractRowData"/>
		</map>
		
	</class>
	
</hibernate-mapping>
		