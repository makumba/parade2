<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
      
<hibernate-mapping package="org.makumba.parade.model">
	<class name="Row">
		<id name="id" unsaved-value="undefined">
			<generator class="native" />
		</id>

		<property name="rowname"/>
        <property name="rowpath"/>
        <property name="description"/>
        
        <!-- <many-to-one name="parade" column="id_parade" not-null="true"/>  -->
        
         <map name="files" outer-join="true" cascade="all" inverse="true" access="field" order-by="path">
		    <cache usage="read-write" />
			<key><column name="FILE_ID" not-null="false"/></key>
			<index column="path" type="string"/>
			<one-to-many class="File"/>
		</map>
		
		<map name="rowdata" outer-join="true" cascade="all" inverse="true" access="field" order-by="rowname">
		    <cache usage="read-write" />
			<key><column name="DATA_ID" not-null="false"/></key>
			<index column="rowname" type="string"/>
			<one-to-many class="AbstractRowData"/>
		</map>
		
	</class>
	
</hibernate-mapping>
		