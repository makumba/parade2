<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
      
<hibernate-mapping package="org.makumba.parade.model">

<class name="AbstractFileData" table="FileData" lazy="true">

	<cache usage="read-write" />

    <id name="id" type="long" column="FILEDATA_ID">
        <generator class="native"/>
    </id>
    
   <property name="dataType" />
   <many-to-one name="file" column="id_file" not-null="true" outer-join="true"/>
    
    <joined-subclass name="FileCVS" table="FILE_CVS" lazy="false">
        <key column="FILEDATA_ID"/>
        <property name="status" />
        <property name="revision" />
        <property name="date" />
    </joined-subclass>
    
    <joined-subclass name="FileTracker" table="FILE_TRACKER" lazy="false">
        <key column="FILEDATA_ID"/>
        <property name="tracked" />
        <property name="title" />
        <property name="description" />
        <property name="author" />
        <property name="status" />
    </joined-subclass>
    
</class>

</hibernate-mapping>