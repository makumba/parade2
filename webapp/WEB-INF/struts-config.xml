<struts-config>
  <display-name><![CDATA[
     controller
  ]]>
  </display-name>
    <description><![CDATA[
     Dispatches actions to right places, and performs needed controller actions
  ]]>
  </description>

  <!-- ========== Global Forward Definitions ============================== -->
  <global-forwards>
    <forward   name="welcome"              path="/Welcome.do"/>
    <forward   name="logoff"               path="/Logoff.do"/>
    <forward   name="logon"                path="/Logon.do"/>
    <forward   name="success"              path="/MainMenu.do"/>
  </global-forwards>


  <!-- ========== Action Mapping Definitions ============================== -->
  <action-mappings>

      <!-- File view -->
      <action    path="/File"
                 type="org.makumba.parade.controller.FileAction"
                 parameter="op"
                 >
          
          <forward name="browse" path="/servlet/browse" />
          <forward name="upload" path="/uploadFile.jsp" />
          <forward name="edit" path="/servlet/edit" />
          
      </action>
      
      <!-- Command view -->
      <action    path="/Command"
                 type="org.makumba.parade.controller.CommandAction"
                 parameter="op"
                 >
                 
          <forward name="files" path="/servlet/browse" />
          
      </action>
      
      <!-- Edit view -->
      <action    path="/Edit"
                 type="org.makumba.parade.controller.EditAction"
                 parameter="op"
                 >
                 
          <forward name="files" path="/servlet/browse" />
          
      </action>
      
      <!-- CVS view -->
      <action    path="/Cvs"
                 type="org.makumba.parade.controller.CvsAction"
                 parameter="op"
                 >
                 
          <forward name="command" path="/servlet/browse" />
          
      </action>
      
      <!-- Webapp view -->
      <action    path="/Webapp"
                 type="org.makumba.parade.controller.WebappAction"
                 >
                 
                 <forward name="command" path="/servlet/browse" />
          
      </action>
      
      <!-- Ant view -->
      <action    path="/Ant"
                 type="org.makumba.parade.controller.AntAction"
                 >
                 
                 <forward name="command" path="/servlet/browse" />
          
      </action>
      

      <!-- Change locale action
      <action
          path="/Locale"
          type="org.apache.struts.webapp.example.LocaleAction"
          parameter="welcome" />

      
      <action    path="/Registration"
                 forward="/registration.jsp"/>

      
      <action    path="/MainMenu"
                 forward="/mainMenu.jsp"/>

      
      <action    path="/Logon"
                 forward="/logon.jsp"/>

       
       <action    path="/SubmitLogon"
                  type="org.apache.struts.webapp.example.LogonAction"
                  name="LogonForm"
                 scope="request"
                 input="logon">
         <exception
                   key="expired.password"
                  type="org.apache.struts.webapp.example.ExpiredPasswordException"
                  path="/ExpiredPassword.do"/>
       </action>

      
       <action    path="/Logoff"
                  type="org.apache.struts.webapp.example.LogoffAction">
         <forward name="success"              path="/Welcome.do"/>
       </action>

      
      <action    path="/EditSubscription"
                 type="org.apache.struts.webapp.example.EditSubscriptionAction"
                 name="SubscriptionForm"
                scope="request"
             validate="false">
        <forward name="failure"              path="/MainMenu.do"/>
        <forward name="success"              path="/subscription.jsp"/>
      </action>

       
       <action    path="/SaveSubscription"
                  type="org.apache.struts.webapp.example.SaveSubscriptionAction"
                  name="SubscriptionForm"
                 scope="request"
                 input="subscription">
         <forward name="subscription"    path="/subscription.jsp"/>
         <forward name="success"         path="/EditRegistration.do?action=Edit"/>
       </action>

      
      <action    path="/ExpiredPassword"
              forward="/changePassword.jsp">
      </action>

      <action    path="/Tour"
              forward="/tour.html">
      </action>
-->
  </action-mappings>

  <!-- ========== Controller Configuration ================================ -->

  <controller pagePattern="$M$P" inputForward="true" />
    <!-- pagePattern: use this pattern when creating URIs to resources.
        $M=module, $P=path -->
    <!-- inputForward: The "input" parameter on "action" elements is the name of a
         local or global "forward" rather than a module-relative path -->


